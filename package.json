{
  "private": true,
  "workspaces": [
    "shared",
    "backend",
    "frontend"
  ],
  "name": "base",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "backend": "yarn workspace backend",
    "frontend": "yarn workspace frontend",
    "server": "yarn workspace server",
    "dev:backend:esbuild": "esbuild backend/src/index.ts --bundle --platform=node --target=node12.18 --external:express --outfile=./backend/build/index.js --watch",
    "dev:backend:nodemon": "nodemon  backend/build/index.js  --inspect",
    "dev:backend": "concurrently --kill-others \"yarn dev:backend:esbuild\" \"yarn dev:backend:nodemon\" ",
    "test": "mocha --recursive --require esbuild-register"
  },
  "devDependencies": {
    "typescript": "^4.2.4",
    "prettier": "^2.2.1",
    "esbuild": "^0.11.11",
    "esbuild-register": "^2.4.0",
    "mocha": "^8.3.2",
    "@types/mocha": "^8.2.2",
    "concurrently": "^6.0.2"
  }
}
